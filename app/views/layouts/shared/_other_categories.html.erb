<section id="other-pet" class="row-full py-4">
  <div class="container">
    <h2>You may also want to rent these kinds of pets:</h2>
    <div class="d-flex justify-content-around">
      <% category_sample = Pet::CATEGORIES.sample(3) %>
      <% category_sample.each do |category| %>
        <%= link_to "/pets/find/#{category}" do %>
          <div class="card-category m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(category) %>')">
            <p><%= category %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
