<div class="container">
  <div class="row mt-3">

    <div class="col-sm-12 col-lg-6">
      <h3>Incomming bookings</h3>
      <% if @bookings.size == 0 %>
        <p>No bookings found for: <%= "#{current_user.first_name} #{current_user.last_name}" %></p>
      <% else %>
        <% @bookings.each do |booking| %>
          <%= render 'bookings/booking', booking: booking %>
        <% end %>
      <% end %>
    </div>

    <div class="col-sm-12 col-lg-6">
      <h3>My pets</h3>
      <div class="row">
        <% @pets.each do |pet| %>
          <div class="col-6">
            <div class="card mt-2">
              <div class="card-body">
                <h5 class="card-title"><%= pet.name %></h5>
                <%= cl_image_tag pet.photos.first.key, height: 60, width: 60 if pet.photos.attached?%>
                <p><%= number_with_precision(pet.price_per_day, precision: 2) %> â‚¬</p>  
                <%= link_to  'edit', edit_pet_path(pet), class: "btn" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
  </div>
</div>

