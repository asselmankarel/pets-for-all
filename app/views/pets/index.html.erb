<div class="container my-5">
  <div class="row">
    <% @pets.each do |pet| %>
      <%= link_to pet_path(pet) do %>
        <div class="col-3 text-center">
          <% if pet.photo.attached? %>  
            <%= cl_image_tag pet.photo.key, height: 150, width: 150, crop: :fill, class: "rounded-circle pet-photo" %>
          <% end %>
          <div class="mt-3">
            <%= link_to pet.name, pet_path(pet), class: "pet-link" %>
            <p><%= pet.address %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<section id="other-pet" class="row-full py-4">
  <div class="container">
    <h2>You may also want to rent these pets :</h2>
    <div class="d-flex justify-content-around">
      <% 3.times do %>
        <% category_sample = Pet::CATEGORIES.sample %>
        <%= link_to "/pets/find/#{category_sample}" do %>
          <div class="card-category m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(category_sample) %>')">
            <p><%= category_sample %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
