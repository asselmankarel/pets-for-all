<div class="container">
  <%= link_to "Back to all pets", pets_path %>

  <h1><%= @pet.name %> <%= link_to "edit", edit_pet_path(@pet) if @pet.user_id == current_user.id %>
    <%= link_to "Remove #{@pet.name}", pet_path(@pet), method: :delete, data: {confirm: "Are you sure?"} if @pet.user_id == current_user.id %></h1>

  <div class="d-flex">
    <div class="p-5">
  <% if @pet.photo.attached? %>
    <%= cl_image_tag @pet.photo.key, height: 300, width: 300, crop: :fill, class: "rounded-circle" %>
  <% end %>
    </div>
    <div class="p-5">
      <p>Name: </p>
      <p>Gender: </p>
      <p>Date of birth: </p>
      <p>Address: </p>
      <p>Pet type: </p>
      <p>Price per day: </p>
      <p>Availability: </p>
      <p>About: </p>
    </div>
    <div class="p-5">
      <p><%= @pet.name %></p>
      <p><%= @pet.gender %></p>
      <p><%= @pet.birth_date %></p>
      <p><%= @pet.address %></p>
      <p><%= @pet.category %></p>
      <p><%= @pet.price_per_day %></p>
      <p><%= @pet.available %></p>
      <p><%= @pet.description %></p>
    </div>
    <%= link_to "Mark a booking", new_pet_booking_path(@pet) %>
  </div>
  <%= render 'devise/shared/login' %>
</div>
