<%= link_to "Back to all pets", pets_path %>

<h1><%= @pet.name %> <%= link_to "edit", edit_pet_path(@pet) if @pet.user_id == current_user.id %>
  <%= link_to "Remove #{@pet.name}", pet_path(@pet), method: :delete, data: {confirm: "Are you sure?"} if @pet.user_id == current_user.id %></h1>


<% if @pet.photo.attached? %>  
  <%= cl_image_tag @pet.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<p>Gender: <%= @pet.gender %></p>
<p>Date of birth: <%= @pet.birth_date %></p>
<p>Address: <%= @pet.address %></p>
<p>Pet type: <%= @pet.category %></p>
<p>Price per day: <%= @pet.price_per_day %></p>
<p>Availability: <%= @pet.available %></p>
<h2>About <%= @pet.name %>:</h2>
<p><%= @pet.description %></p>
