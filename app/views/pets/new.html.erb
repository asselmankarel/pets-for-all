<h1>Add a pet to rent</h1>

<%= simple_form_for @pet do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :gender %>
  <%= f.input :birth_date %>
  <%= f.input :category %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %>
  <%= f.input :available %>
  <%= f.input :price_per_day %>
  <%= f.submit %>
<% end %>

<%= link_to "Back", pets_path %>
