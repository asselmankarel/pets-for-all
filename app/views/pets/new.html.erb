<h1>Add a pet to rent</h1>

<%= simple_form_for @pet do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :gender, collection: Pet::GENDERS %>
  <%= f.input :birth_date, as: :date, html5:true %>
  <%= f.input :category, collection: Pet::CATEGORIES %>
  <%= f.input :description %>
  <%= f.input :price_per_day %>
  <%= f.submit %>
<% end %>

<%= link_to "Back", pets_path %>
