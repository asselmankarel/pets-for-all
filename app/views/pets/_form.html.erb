<%= simple_form_for @pet do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :gender, collection: Pet::GENDERS %>
  <%= f.input :birth_date, as: :date, html5:true %>
  <%= f.input :category, collection: Pet::CATEGORIES %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %>
  <%= f.input :available %>
  <%= f.input :price_per_day %>
  <%= f.submit %>
<% end %>
