<div class="container">
  <h1>Bookings</h1>
  <% if @bookings.size == 0 %>
    <p>No bookings found for: <%= "#{current_user.first_name} #{current_user.last_name}" %></p>
  <% end %>

  <% @bookings.each do |booking| %>
    <div class="card">
      <div class="card-header p-2 text-center">
        <p class="mb-1"><strong>Booking | From:</strong> <%= booking.start_date %> <strong>To:</strong> <%= booking.end_date %></p>
      </div>
      <div class="card-body">
        <%= link_to  pet_path(booking.pet) do %>
          <h5 class="card-title">Pet: <%= booking.pet.name %></h5>
        <% end %>
        <p class="card-text">Address: <%= booking.pet.address %></p>
        <%= link_to 'Edit', edit_pet_booking_path(booking.pet, booking), class: "btn m-2" %>
        <%= link_to 'Delete', booking_path(booking), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn m-2"%>
      </div>
    </div>
  <% end %>



</div>
