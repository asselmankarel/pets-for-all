<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-4">
      <%= cl_image_tag booking.pet.photo.key, height: 150, width: 150, crop: :fill, class: "rounded-circle m-4" if booking.pet.photo.attached? %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <%= link_to  pet_path(booking.pet) do %>
        <h5 class="card-title">Pet: <%= booking.pet.name %></h5>
        <% end %>
        <p class="mb-1"><strong>From:</strong> <%= booking.start_date %> <strong>To:</strong> <%= booking.end_date %></p>
        <p class="card-text">Address: <%= booking.pet.address %></p>
        <%= link_to 'Edit', edit_pet_booking_path(booking.pet, booking), class: "btn m-2" %>
        <%= link_to 'Delete', booking_path(booking), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn m-2"%>
      </div>
    </div>
  </div>
</div>
