<h1>Welcome to pets for all</h1>

<div class="d-flex justify-content-around flex-wrap">
  <% Pet::CATEGORIES.each do |category| %>
  <% filename = "#{category}.jpeg" %>
  <div class="m-3" >
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(filename) %>')">
      <%= category %>
    </div>
    </div>
  <% end %>
</div>

<%if user_signed_in? %>
  <h3> <%= current_user.email %></h3>
<% end %>

<%= render 'devise/shared/login' %>